<theming:ThemedWindow x:Class="DemoSingle.SetWindowThemeWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:theming="clr-namespace:Chapter.Net.WPF.Theming;assembly=Chapter.Net.WPF.Theming"
                      Title="SetWindowTheme"
                      Width="500"
                      Height="400"
                      RequestTheme="Dark"
                      mc:Ignorable="d">

    <TextBlock HorizontalAlignment="Center"
               VerticalAlignment="Center"
               Text="ThemeManager.SetWindowTheme(this, WindowTheme.Dark);" />

</theming:ThemedWindow>
